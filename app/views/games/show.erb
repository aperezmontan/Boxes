<% present @game do |game_presenter| %>
<%= render partial: "winners", :locals => { :first_winning_box => Box.winners.first,
#cheated because I wanted sleept
:second_winning_box => @second_quarter_winner,
:third_winning_box => @third_quarter_winner,
:final_winning_box => @final_winner  } %>
<div class="box effect2" id="show-game">
  <div id="box-container">
    <div id='main_wrapper' class='dtable'>
      <div id='control_panel_wrapper' class='drow'>
        <div id='away-team-space' class='dcell'><h2 class="text-center"></h2></div>
        <div id='away-team' class='dcell'><h2 class="text-center"><%= @game.away_team %></h2></div>
      </div>
    </div>
    <div class='dtable'>
      <div id='bottom_wrapper' class='drow'>
        <div id='home-team' class='dcell'><h2 class="rotate home-team"><%= @game.home_team %></h2></div>
        <div id='chart_container' class='dcell'>
          <div class='dtable'>
            <div id='bottom_wrapper' class='drow'>
              <% game_presenter.away_numbers.each do |away_number| %>
              <div class='box-cell dcell grid-letters'><h3><%= away_number %></h3></div>
              <% end %>
            </div>
          </div>
          <%- @game.boxes.each do |box| %>
          <%= render partial: "boxes/box", :locals => { :box => box, :winning_boxes => @winning_boxes } %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>