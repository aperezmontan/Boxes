<%= form_tag sessions_path, class: "form-horizontal login-form", method: 'POST' do %>
  <%= text_field_tag :login, nil, class: 'login-bar login-border', placeholder: 'Username/Email' %>
  <%= password_field_tag :password, nil, class: 'login-bar login-border', placeholder: 'Password'%>
  <%= submit_tag 'Sign In', class:'btn btn-default signin-button login-bar' %>
<% end %>
<%= link_to 'Sign Up', new_user_path %>